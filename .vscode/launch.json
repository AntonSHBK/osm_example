{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Запуск текущего файла",
        "type": "debugpy",
        "request": "launch",
        "program": "${file}",
        "console": "integratedTerminal",
        "env": {
          "PYTHONPATH": "${workspaceFolder}"
        }
      },
      {
        "name": "Запуск FastAPI через Uvicorn",
        "type": "debugpy",
        "request": "launch",
        "module": "uvicorn",
        "args": [
          "app.main:app",
          "--host", "127.0.0.1",
          "--port", "8000",
          "--reload"
        ],
        "jinja": true,
        "console": "integratedTerminal",
        "env": {
          "PYTHONPATH": "${workspaceFolder}"
        }
      }
    ]
  }
  